<section class="after-head d-flex section-text-white position-relative">
    <div class="d-background" data-image-src="/admin/cinemas/<%= cine.id %>" data-parallax="scroll"></div>
    <div class="d-background bg-black-80"></div>
    <div class="top-block top-inner container">
        <div class="top-block-content">
            <h1 class="section-title">Chi tiết cụm rạp</h1>
        </div>
    </div>
</section>
<div class="container">
    <div class="sidebar-container">

        <div class="content">
            <section class="section-long">
                <div class="section-line">
                    <div class="movie-info-entity">
                        <div class="entity-poster" data-role="hover-wrap">
                            <div class="embed-responsive embed-responsive-poster">
                                <img class="embed-responsive-item" src="/admin/cinemas/<%= cine.id %>" alt="" />
                            </div>
                        </div>
                        <div class="entity-content">
                            <h2 class="entity-title">
                                <%= cine.name %>
                            </h2>
                            <div class="entity-category">

                                <%= cine.address %>
                                    <br>
                            </div>
                            <h2 style="padding: 30px;" class="entity-title">Danh sách cụm rạp</h2>
                            <% list.forEach(cinemas=>{ %>
                                <article class="movie-line-entity">
                                    <div class="entity-content">
                                        <h4 class="entity-title">
                                            <a class="content-link" href="/showtime?idCinema=<%= cinemas.id %>">
                                                <%- cinemas.name; %>
                                        </h4>
                                    </div>
                                </article>
                                <% })  %>
                        </div>
                    </div>
                </div>
            </section>

        </div>
    </div>
    <div style="padding-top: 20px;" class="sidebar section-long order-lg-last">
        <section class="section-sidebar">
            <div class="section-head">
                <h2 class="section-title text-uppercase">Vị trí rạp</h2>
            </div>
            <div class="movie-short-line-entity">
                <iframe src="https://www.google.com/maps?q=<%= cine.address %>&output=embed" width="1100" height="450" style="border: 2px black;" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </section>
    </div>
</div>